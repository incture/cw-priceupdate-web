<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog showHeader="false" class="scalesPopUpStyle" >
		<l:VerticalLayout width="100%">
			<l:content>
				<Table noDataText="{i18n>NO_SCALE_DATA}" class="materialTblClass sapUiSizeCompact scaleColHdrStyle" 
					title="{i18n>SCALE_DETAILS_NUMBER}"  id="APRVL_SCALE_TABLE">
					<headerToolbar>
						<Toolbar class="scalesToolBarHeader">
								<Label text = "{i18n>SCALE_DATA}" class="scaleLableStyle"/>
								<ToolbarSpacer></ToolbarSpacer>
								<Image src="images/DetailColorLegend1.png" class="scalesLegendClass"></Image>
						</Toolbar>
					</headerToolbar>
				</Table>
			</l:content>
		</l:VerticalLayout>
		 <beginButton>
			<Button class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin sapUiSmallMarginTop"
				text="{i18n>CANCEL}" press="onCloseFilterOptionsDialogConfirm" visible="false"/>
		</beginButton> 
		<endButton>
			<Button	class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin sapUiSmallMarginTop inctureDialogMargin"
				text="{i18n>BUTTON_TEXT_OK}" press="onCloseFilterOptionsDialogConfirm" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>