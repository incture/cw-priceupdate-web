<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:sap.ui.layout.form="sap.ui.layout.form" controllerName="approvalui.controller.mainView">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
						<sap.ui.layout.form:content>
							<Label text="Requestor"/>
							<Input width="100%" editable="false" enabled="false" value="{oPRModel>/REQID}"/>
							<Label text="Document Type" required="true"/>
							<Input width="100%" editable="false" enabled="false" value="Purchase Requisition"/>
							<Label text="Company Code" required="true"/>
							<Input editable="false" enabled="false" value="{oPRModel>/COMPANY_CODE}"/>
							<Label text="Material Group"/>
							<Input editable="false" enabled="false" required="true" value="{oPRModel>/MATERIAL_GROUP}"/>
							<Label text="Currency" required="true"/>
							<Input editable="false" enabled="false" value="{oPRModel>/CURRENCY}"/>
							<Label text="Create Date"/>
							<Input editable="false" enabled="false" value="{oPRModel>/CREATED_DATE}"/>
						</sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
					<VBox class="sapUiLargeMarginBottom">
						<Table id="reuesterTable" class="TblClass" items="{ path: 'oPRModel>/ItemDetails/results', sorter: { path: '' } }">
							<headerToolbar>
								<Toolbar>
									<Title text="Request Itmes" level="H4"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="ItemNo"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Material"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Material Description"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
									<Text text="Unit Price"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
									<Text text="Quantity"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
									<Text text="Total Price"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{oPRModel>ITEM}"/>
										<Text text="{oPRModel>MATERIAL}"/>
										<Text text="{oPRModel>MATERIAL_DESC}"/>
										<Text text="{oPRModel>UNIT_PRICE}"/>
										<Text text="{oPRModel>QUANTITY}"/>
										<Text text="{oPRModel>NET_PRICE}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<HBox justifyContent="End" class="sapUiTinyMarginEnd">
							<HBox alignItems="Center" width="15%">
								<Label text="Net Price" class="sapUiTinyMarginEnd"/>
								<Input value="{oPRModel>/TOTALPRICE}" textAlign="End" editable="false" enabled="false"></Input>
							</HBox>
						</HBox>
						<HBox>
							<Label text=" Approval Comments" class="sapUiTinyMarginEnd"/>
							<TextArea value="{oPRModel>/comments}" class="sapUiLargeMarginBottom"></TextArea>
						</HBox>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>