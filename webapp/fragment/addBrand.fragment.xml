<core:FragmentDefinition xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">

	<Popover title="New Brand" placement="Top">
		<content>
			<Input value="{oIdeationModel>/newBrand}">
			</Input>
			</content>
			
			<Toolbar  class="sapUiSizeCompact">
				<ToolbarSpacer/>
			<core:Icon src="sap-icon://accept"
				press="onAddNewBrand" />
			<core:Icon src="sap-icon://decline"
				press="onRejectNewBrand" />
				</Toolbar>
		
	</Popover>
</core:FragmentDefinition>