<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="PU_Reports.controller.vendorCompetitor"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data">
	<Page title="Title" showHeader="false" class="pageBackground">
		<content>
			<VBox class="priceUpdateHdrBoxClass sapUiSizeCompact">
				<Panel expandable="true" expanded='{oElementPropertyModel>/oMPanelExpanded}' expand="onexpand" class="panelClass">
					<headerToolbar class="VendorPanelHTB">
						<Toolbar>
							<Title text="{i18n>MATERIAL_SEARCH}"/>
							<ToolbarSpacer/>
							<Button text="{i18n>VENDOR_SEARCH}" visible="{oElementPropertyModel>/MaterialSearch}" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin"
								press="onMaterialSearch"/>
							<Button text="{i18n>CLEAR}" visible="{oElementPropertyModel>/MaterialClear}" press="onClearMaterial" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin "/>
						</Toolbar>
					</headerToolbar>
					<content>
						<layout:Grid defaultSpan="L4 M4 S6" id="MATERIAL_SEARCH_BOX" class="detailGridClass"></layout:Grid>
					</content>
				</Panel>
				<Panel expandable="true" expandAnimation="{oElementPropertyModel>/oVPanelExpandAnimation}"
					expanded='{oElementPropertyModel>/oVPanelExpanded}' class="panelClass" visible="{oElementPropertyModel>/vendorPanel}">
					<headerToolbar class="VendorPanelHTB">
						<Toolbar>
							<Title text="{i18n>VENDOR_SELECTION}"/>
							<ToolbarSpacer/>
							<Button text="{i18n>COMPARE}" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin" press="onVendorsSearch"/>
							<Button text="{i18n>CLEAR}" press="onClearCompare" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin "/>
						</Toolbar>
					</headerToolbar>
					<content>
						<layout:Grid defaultSpan="L4 M4 S6" id="VENDORS_SEARCH_GRID" class="detailGridClass"></layout:Grid>
						<MultiInput width="100%" id="multiInput" showValueHelp="false" editable="true" visible="{oElementPropertyModel>/multiInput}" maxTokens="10"></MultiInput>
					</content>
				</Panel>
			</VBox>
			<VBox class="priceUpdateHdrBoxClass sapUiSizeCompact" visible="{oElementPropertyModel>/mainVbox}">
				<Bar class="toolbarClass">
					<contentLeft>
						
						<!--<Label text="{i18n>LINE_GRAPH}" class="ViewLblClass searchlabelClass"/>-->
					</contentLeft>
					<contentRight>
						<ToggleButton id="toggleButtonId" class="ToggleButton" visible="{oElementPropertyModel>/detailedCompare}" text="select" enabled="true" press="onTogglePress">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</ToggleButton>
						<Button id="DetailCompareId" text="Detail Compare" visible="{oElementPropertyModel>/viewDetailCompare}" press="onDetailCompare"
							class="DetailCompare inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin ">
							<customData>
								<core:CustomData key="target" value="cardViewPageId"/>
							</customData>
						</Button>
						<Button text="Back" visible="{oElementPropertyModel>/viewBackDetail}" press="onDetailCompare"
							class="DetailCompare inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin ">
							<customData>
								<core:CustomData key="target" value="detailedViewPageId"/>
							</customData>
						</Button>
						<SegmentedButton class= "segmentedBtnClass">
							<items>
								<SegmentedButtonItem id="viewDetail" icon="sap-icon://table-view" class="iconBtn sapUiSizeCompact sapUiSmallMarginBegin"
									press="onSwitchView" visible="{oElementPropertyModel>/SegmentedButton}">
									<customData>
										<core:CustomData key="target" value="detailedViewPageId"/>
									</customData>
								</SegmentedButtonItem>
								<SegmentedButtonItem id="viewGrapgh" icon="sap-icon://line-chart" class="iconBtn sapUiSizeCopact sapUiSmallMarginBegin"
									press="onSwitchView" visible="{oElementPropertyModel>/SegmentedButton}">
									<customData>
										<core:CustomData key="target" value="graphViewPageId"/>
									</customData>
								</SegmentedButtonItem>
							</items>
						</SegmentedButton>
					</contentRight>
				</Bar>
				<NavContainer id="navCon" width="100%" height="30rem">
					<Page id="detailedViewPageId" showHeader="false">
						<layout:Grid defaultSpan="L12 M12 S12" id="VENDORS_NETPRICES_GRID" class="detailGridClass"></layout:Grid>
					</Page>
					<Page id="graphViewPageId" showHeader="false">
						<viz:VizFrame xmlns="sap.viz" id="vendorsGraph" width="100%" vizType="line" selectData="onSelectGraphPoint"></viz:VizFrame>
					</Page>
					<Page id="cardViewPageId" showHeader="false">
						<HBox id="VendorCompareId">
							<VBox class="ConditionSuperSet sapUiSizeCompact">
								<VBox  class = "VendorProfile">
								</VBox>
								<Label text="Vendor Name" class="superSetInfo"/>
								<Label text="Net Price" class="superSetInfo"/>
								<VBox items="{oDetailedCompareModel>/superSetConditionsType}">
									<Label text="{oDetailedCompareModel>}" class="superSetInfo"/>
								</VBox>
							</VBox>
							<ScrollContainer horizontal = "true" vertical= "false" width = "57rem" >
									<HBox id="VendorCompareDataId" class="scrollContainerClass"></HBox>
							</ScrollContainer> 
						</HBox>
					</Page>
				</NavContainer>
			</VBox>
			
			<VBox class="priceUpdateHdrBoxClass sapUiSizeCompact" visible="{oElementPropertyModel>/mainVboxSD}">
				<Bar class="toolbarClass">
					<contentMiddle>
						<Label text="{i18n>VENDOR_COMPARISON}" class="matTblLblClass searchlabelClass "/>
					</contentMiddle>
					<contentRight>
						<SegmentedButton class= "segmentedBtnClass">
							<items>
								<SegmentedButtonItem id="viewGrapghSD" icon="sap-icon://line-chart" class="iconBtn sapUiSizeCopact sapUiSmallMarginBegin"
									press="onSwitchView" visible="{oElementPropertyModel>/SegmentedButton}">
									<customData>
										<core:CustomData key="targetSD" value="graphViewSDPageId"/>
									</customData>
								</SegmentedButtonItem>
								<SegmentedButtonItem id="viewDetailSD" icon="sap-icon://table-view" class="iconBtn sapUiSizeCompact sapUiSmallMarginBegin"
									press="onSwitchView" visible="{oElementPropertyModel>/SegmentedButton}">
									<customData>
										<core:CustomData key="targetSD" value="cardViewSDPageId"/>
									</customData>
								</SegmentedButtonItem>
							</items>
						</SegmentedButton>
					</contentRight>
				</Bar>
				<NavContainer id="navConSD" width="100%" height="30rem">
					<Page id="cardViewSDPageId" showHeader="false">
						<HBox id="VendorCompareSDId">
							<VBox class="ConditionSuperSet sapUiSizeCompact">
								<VBox  class = "VendorProfile">
								</VBox>
								<Label text="Vendor Name" class="superSetInfo"/>
								<Label text="Net Price" class="superSetInfo"/>
								<VBox items="{oVendorComparisonModel>/superSetConditionsType}">
									<Label text="{oVendorComparisonModel>}" class="superSetInfo"/>
								</VBox>
							</VBox>
							<ScrollContainer horizontal = "true" vertical= "false" width = "57rem" >
									<HBox id="VendorCompareDataSDId" class="scrollContainerClass"></HBox>
							</ScrollContainer> 
						</HBox>
					</Page>
					<Page id="graphViewSDPageId" showHeader="false">
						<viz:VizFrame xmlns="sap.viz" id="vendorsGraphSD" width="100%" vizType="line" ></viz:VizFrame>
					</Page>
				</NavContainer>
			</VBox>
		</content>
	</Page>
</mvc:View>