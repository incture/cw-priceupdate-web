<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="PU_Reports.controller.summaryReport"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data">
	<Page showHeader="false" class="pageBackground">
		<content>
			<VBox class="priceUpdateHdrBoxClass sapUiSizeCompact">
				<Panel headerText='{i18n>REPORTS}' expandable='true' expanded='true' class="panelClass">
					<headerToolbar class="VendorPanelHTB">
						<Toolbar height="3rem">
							<Title text="{i18n>SEARCH_PARAMETERS}"/>
							<ToolbarSpacer/>
							<Button text="{i18n>SEARCH}" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin" press="onSearch"/>
							<Button text="{i18n>CLEAR}" press="clrSearchParameter" class="inctureDialogBtn sapUiSizeCompact sapUiSmallMarginBegin "/>
						</Toolbar>
					</headerToolbar>
					<content>
						<layout:Grid defaultSpan="L4 M4 S6" id="MATERIAL_SEARCH_BOX" class="detailGridClass" visible="{oSetVisibleModel>/MatSearch}"></layout:Grid>
						<layout:Grid defaultSpan="L4 M4 S6" id="MAT_ADVANCE_GRID_LAY" class="detailGridClass" visible="{oSetVisibleModel>/advanceMat}"></layout:Grid>
					</content>
				</Panel>
			</VBox>
			<VBox class="priceUpdateHdrBoxClass sapUiSizeCompact" id="REPORT_BOX" visible="{oSetVisibleModel>/reportBox}">
				<Bar class="searchBarClass">
					<contentLeft>
						<Label text="{i18n>SEARCH_RESULT}" class="barHeaderLblClass"></Label>
					</contentLeft>
					<contentRight>
						<SegmentedButton selectedKey="{oSetVisibleModel>/selectedkey}" class="reportTypeBtn sapUiSizeCompact sapUiSmallMarginBegin ">
							<items>
								<SegmentedButtonItem text="{i18n>DETAILE}" key="Detailed" press="setReportType"/>
								<SegmentedButtonItem text="{i18n>SUMMARY}" key="Summary" press="setReportType"/>
							</items>
						</SegmentedButton>
						<Button press="onExportToExcel" icon= "sap-icon://download" class="inctureDownloadBtn sapUiSizeCompact sapUiSmallMarginBegin "/>
					</contentRight>
				</Bar>
				<Table id="DETAIL_REPORT_TABLE" class="materialTblClass" mode="SingleSelectMaster" selectionChange="onRowSelect"
					visible="{oSetVisibleModel>/detailReport}"></Table>
				<VBox id="SUMMARY_REPORT_BOX" visible="{oSetVisibleModel>/summaryReport}">
					<Bar class="searchBarClass">
						<contentRight>
							<SegmentedButton selectedKey="Weekly" class="inctureSegBtns inctureConditonSegBtns sapUiSizeCompact sapUiSmallMarginBegin ">
								<items>
									<SegmentedButtonItem text="{i18n>LAST_7_DAYS}" key="Weekly" press="setConditionRecordOnChangeMode" class="inctureConditonSegBtns"/>
									<SegmentedButtonItem text="{i18n>LAST_MONTH}" key="Monthly" press="setConditionRecordOnChangeMode" class="inctureConditonSegBtns"/>
									<SegmentedButtonItem text="{i18n>LAST_3_MONTH}" key="Quarterly" press="setConditionRecordOnChangeMode" class="inctureConditonSegBtns"/>
								</items>
							</SegmentedButton>
						</contentRight>
					</Bar>
					<viz:VizFrame xmlns="sap.viz" id="vizcol1" width="100%" vizType="stacked_column"></viz:VizFrame>
				</VBox>
			</VBox>
		</content>
	</Page>
</core:View>