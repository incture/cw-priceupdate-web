<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Popover showHeader="true" contentWidth="15%" placement="Top">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<HBox items="{oPTDetailDataModel>/vendorInfo}">
					<Label text="{oPTDetailDataModel>startDate}" class="popOverDateLabel"></Label>
				</HBox>
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline" press="onClosePopOver"/>
			</Toolbar>
		</customHeader>
		<content>
			<l:Grid content="{oPTDetailDataModel>/vendorInfo}" width="100%" defaultSpan="L12 M12 S12" class="popOverClass">
				<HBox>
					<VBox>
						<Label text="Net Price "  class="popOverLabel"></Label>
						<l:Grid content="{oPTDetailDataModel>conditionTypes}" defaultSpan="L12 M12 S12" class="conTypeGridClass">
							<VBox>
								<Label text="{oPTDetailDataModel>conditionLabel} " class="popOverLabel"></Label>
							</VBox>
						</l:Grid>
					</VBox>
					<VBox>
						<Text text="{oPTDetailDataModel>netPrice}" class="popOverLabel"></Text>
						<l:Grid content="{oPTDetailDataModel>conditionTypes}" defaultSpan="L12 M12 S12" class="conTypeGridClass">
							<VBox>
								<Text text="{oPTDetailDataModel>conditionValue}" class="popOverLabel"></Text>
							</VBox>
						</l:Grid>
					</VBox>
				</HBox>
			</l:Grid>
		</content>
	</Popover>
</core:FragmentDefinition>