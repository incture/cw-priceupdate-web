							<Text text="{oDashboardModel>package_size}"/>
							<Text text="{oDashboardModel>sap_product_desc}"/>
							<Text text="{oDashboardModel>pick_dept}"/>
							<Text text="{oDashboardModel>storage_temp}"/>
