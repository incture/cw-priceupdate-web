<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="freshDirectSKU.SKU.controller.salesTaxMaintenance" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="false" class="sapUiSizeCompact">
				<content>
					<Table items="{avalaraTaxModel>/avalaraTax}" class="tableClass"  selectionChange="onRowSelection"
					mode="SingleSelectMaster">
						<headerToolbar>
							<Toolbar class="avalaraTaxToolbar">
								<Title text="{i18n>SALES_TAX_MAINTENANCE}"/>
								<ToolbarSpacer></ToolbarSpacer>
								<Button text="Create With New SubCategory" type="Accept" press="createNewSubCategory"></Button>
								<Button text="Create" type="Accept" press="createNewTaxCode"></Button>
								<Button text="Modify" type="Accept" press="modifyTaxCode" enabled="{createNewTaxCodeModel>/modifyEnabled}"></Button>
								<Button text="Delete" type="Reject" press="deleteTaxCode"  enabled="{createNewTaxCodeModel>/deleteEnabled}"></Button>
								<Button text="Download as Excel" type="Emphasized" press="onDownloadtoExcel"></Button>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true" width="8rem">
								<Text text="{i18n>CATEGORY}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" width="12rem">
								<Text text="{i18n>SUB_CATEGORY}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" width="8rem" hAlign="Center">
								<Text text="{i18n>AVALARA_TAX_CODE}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" width="6rem" hAlign="Center">
								<Text text="{i18n>TAXABLE_IN_NY}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>DESCRIPTION}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
								<Text text="{avalaraTaxModel>category}"/>
									<Text text="{avalaraTaxModel>subCategory}"/>
									<Text text="{avalaraTaxModel>taxCode}"/>
									<Text text="{avalaraTaxModel>taxable}"/>
									<Text text="{avalaraTaxModel>Description}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>