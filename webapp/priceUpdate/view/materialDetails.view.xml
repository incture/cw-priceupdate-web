<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	controllerName="com.incture.controller.materialDetails" xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Page showHeader="false" class="pageBackground">
		<Toolbar class="sapUiSmallMarginBottom">
			<Button icon="sap-icon://nav-back" type="Transparent" press="onNavBack" />
			<ToolbarSpacer />
			<Button type="Emphasized" text="{i18n>REVOKE}"
				press="onClickRevoke" class=" inctureCheckoutBtn submitButtonClass sapUiSizeCompact "
				visible="{oElementVisibleModel>/revokeButton}" />
			<Button type="Emphasized" text="{i18n>SUBMIT}"
				press="onSubmitMaterialList" class="inctureCheckoutBtn submitButtonClass sapUiSizeCompact"
				visible="{oElementVisibleModel>/submitButton}" data:name="SUBMIT"/>
			<!--<Button type="Emphasized" text="{i18n>SAVE}" enabled="false"
				press="onSubmitMaterialList" class=" inctureCheckoutSaveBtn submitButtonClass sapUiSizeCompact submitMarginClass"
				visible="{oElementVisibleModel>/saveButton}" data:name="SAVE" />-->
		</Toolbar>
		<content>
			<VBox>
				<items>
					<VBox class="priceUpdateBoxClass sapUiSizeCompact">
						<Toolbar class="toolbarClass">
							<Label text="{i18n>PURCHASE_INFO_RECORD}" class="matTblLblClass"
								design="Bold" />
						</Toolbar>
						<layout:Grid id="INFO_REC_GRID" defaultSpan="L4 M4 S6"
							class="detailGridClass">
						</layout:Grid>
					</VBox>
					<VBox class="priceUpdateHdrBoxStyleClass sapUiSizeCompact">
						<Toolbar class="toolbarClass">
							<Label text="{i18n>HEADER_DETIALS}" class="matTblLblClass"
								design="Bold" />
						</Toolbar>
						<Table id="VARIABLE_KEY_TBL" inset="false"
							class="materialTblClass sapUiSizeCompact">
						</Table>
					</VBox>
					<VBox id="TABLEOFMATERIAL">
					<Toolbar class="middletoolbarClass" >
						<SegmentedButton selectedKey="{oElementVisibleModel>/setRecord}"
							class="inctureSegBtns inctureConditonSegBtns sapUiSizeCompact sapUiSmallMarginBegin " visible="{oElementVisibleModel>/toolbarVisible}">
							<items>
								<SegmentedButtonItem text="{i18n>CHANGED}"
									key="Change" press="setConditionRecordOnChangeMode" class="inctureConditonSegBtns" />
								<SegmentedButtonItem text="{i18n>ALL}" key="ALL"
									press="setConditionRecordOnChangeMode" class="inctureConditonSegBtns" />
							</items>
						</SegmentedButton>
						<ToolbarSpacer />
						<Button type="Emphasized" text="{i18n>NET_PRICE_ANALYSIS}"
						press="getNetPrice" class=" inctureCheckoutNetPriceBtn submitButtonClass sapUiSizeCompact" />

					</Toolbar>
					<VBox class="priceUpdateHdrBoxStyleClass sapUiSizeCompact">
						<IconTabBar items="{oMatSectionModel>/conditionTypes}" select="onIconBarSelect" 
							class="iconTabHeader sapUiResponsiveContentPadding iconTabItemClass">
							<items>
								<IconTabFilter key="{oMatSectionModel>conditionId}"
									text="{oMatSectionModel>conditionName}" tooltip="{oMatSectionModel>conditionName}" />
							</items>
							<content>
								<Table id="PRICE_UPDATE_MAT_TABLE" mode="None">
									<headerToolbar>
										<Toolbar class="conditionRecordClass">
											<Label text="{i18n>CONDITION_RECORDS}" design="Bold"
												class="inctureHdrTextClass" />
											<ToolbarSpacer></ToolbarSpacer>
											<ToolbarSpacer></ToolbarSpacer> 
											<ToolbarSpacer></ToolbarSpacer>
											<ToolbarSpacer></ToolbarSpacer> 
											<ToolbarSpacer></ToolbarSpacer>
											<ToolbarSpacer></ToolbarSpacer> 
											
											<Image src="images/DetailColorLegend1.png" class="legendImageClass"
												visible="{oElementVisibleModel>/imageVisible}"></Image>
											<ToolbarSpacer></ToolbarSpacer>
											<Button icon="sap-icon://add" type="Transparent" 
												press="onAddRow" visible="{oElementVisibleModel>/addButton}" />
											<Button icon="sap-icon://undo" type="Transparent" enabled="{oUndoModel>/undoBtnEnabled}"
												press="onActionUndo" visible="{oElementVisibleModel>/undoButton}" />
											<SegmentedButton selectedKey="{oElementVisibleModel>/setStatus}" class="inctureSegBtns toolbarSegBtn sapUiSizeCompact sapUiSmallMarginBegin ">
												<items>
													<SegmentedButtonItem text="{i18n>ACTIVE}" enabled="true" key="Active" press="onStatusUpdate" />
													<SegmentedButtonItem text="{i18n>INACTIVE}" key="Inactive" enabled="true" press="onStatusUpdate" />
												</items>
											</SegmentedButton>
										</Toolbar>
									</headerToolbar>
								</Table>
							</content>
						</IconTabBar>
					</VBox>
					<VBox class="priceUpdateBoxClass sapUiSizeCompact" height="10rem">
						<HBox id="HEADER_CMNT_BOX"></HBox>
					</VBox>
				</VBox>
				<VBox id="NETPRICEDATA"></VBox>
				</items>
			</VBox>
		</content>
	</Page>
</core:View>